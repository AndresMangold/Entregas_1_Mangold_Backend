<div class="login-page">
    <div class="form-container">
        <form action="/api/login" method="post" enctype="application/x-www-form-urlencoded" class="form">
            <label for="_email">Email:</label>
            <input type="email" name="email" id="_email" />

            <label for="_pass">Password:</label>
            <input type="password" name="password" id="_pass"/>

            <button type="submit" class="add-to-cart-green-button">Login</button>
        </form>
    </div>
    
    <a href="/register" class="register-link">Register</a>
</div>

{{#if errorMessage}}
    <p>{{errorMessage}}</p>
{{/if}}
