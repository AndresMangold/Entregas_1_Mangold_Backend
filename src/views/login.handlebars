<div class="login-page">
    <div class="form-container">
        <form action="/api/login" method="post" enctype="application/x-www-form-urlencoded" class="form">
            <div class="input-row">
                <label for="_email">Email:</label>
                <input type="email" name="email" id="_email" />
            </div>

            <div class="input-row">
                <label for="_pass">Password:</label>
                <input type="password" name="password" id="_pass"/>
            </div>

            <button type="submit" class="login-button">Login</button>
        </form>
    </div>
    
    <button class="register-button" onclick="window.location.href='/register'">Register</button>
    <button class="github-button" onclick="window.location.href='/api/github'">Conectar con GitHub</button>
</div>

{{#if errorMessage}}
    <p>{{errorMessage}}</p>
{{/if}}